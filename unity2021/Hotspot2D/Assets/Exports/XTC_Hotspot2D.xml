<?xml version="1.0" encoding="utf-8"?>
<MyConfig version="1.0">
	<!-- UI 
      visible: 预加载完成后是否显示
      slot: ui根节点在主Canvas中的挂载路径
    -->
	<UI visible="true" slot="[root]"/>
	<!-- 远程过程调用
      address: 地址
    -->
	<GRPC address="https://localhost:19000"/>
	<!-- 样式列表
      name: 名称
    -->
	<Styles>
		<Style name="default">
			<!-- 图层
			  image: 位于themes/XTC_Hotspot2D路径的图片
			-->
			<Layers>
				<Layer image="Layer0_default.jpg"/>
			</Layers>
			<!-- 热点
			  image: 位于themes/XTC_Hotspot2D路径的图片
			  x: 横坐标，屏幕中为0，左方为负数，右方为正
			  y: 纵坐标，屏幕中为0，下方为负数，上方为正
			-->
			<Hotspots>
				<Hotspot image="Hotspot_default.png">
				  <Anchor marginH="0" marginV="0" width="144" height="144"/>
					<OnSubjects>
						<Subject message="/XTC/ImageAtlas3D/Open">
							<Parameters>
								<Parameter key="uid" value="default" type="string"/>
								<Parameter key="source" value="file://assloud" type="string"/>
								<Parameter key="uri" value="tech.meex.展馆测试/_assets/tech.meex.展馆测试_展馆1.ai3" type="string"/>
								<Parameter key="delay" value="0" type="float"/>
							</Parameters>
						</Subject>
						<Subject message="/XTC/Hotspot2D/Forward">
							<Parameters>
								<Parameter key="uid" value="XTC_Hotspot2D" type="string"/>
							</Parameters>
						</Subject>
					</OnSubjects>
					<OffSubjects>
						<Subject message="/XTC/ImageAtlas3D/Close">
							<Parameters>
								<Parameter key="uid" value="default" type="string"/>
								<Parameter key="delay" value="0" type="float"/>
							</Parameters>
						</Subject>
						<Subject message="/XTC/Hotspot2D/Back">
							<Parameters>
								<Parameter key="uid" value="XTC_Hotspot2D" type="string"/>
							</Parameters>
						</Subject>
					</OffSubjects>
				</Hotspot>
				<Hotspot image="Hotspot_default.png">
				  <Anchor marginH="-200" marginV="-200" width="144" height="144"/>
				</Hotspot>
				<Hotspot image="Hotspot_default.png">
				  <Anchor marginH="-200" marginV="200" width="144" height="144"/>
				</Hotspot>
				<Hotspot image="Hotspot_default.png">
				  <Anchor marginH="200" marginV="-200" width="144" height="144"/>
				</Hotspot>
				<Hotspot image="Hotspot_default.png">
				  <Anchor marginH="200" marginV="200" width="144" height="144"/>
				</Hotspot>
				<Hotspot image="AerialPhoto_default.png" x="0" y="-500">
				  <Anchor horizontal="center" vertical="bottom" marginH="0" marginV="32" width="178" height="72"/>
				</Hotspot>
			</Hotspots>
			<Board>
				<BackButton image="Back_default.png">
				  <Anchor horizontal="left" vertical="top" marginH="32" marginV="32" width="152" height="72"/>
        </BackButton> 
      </Board>
		</Style>
	</Styles>
	<!-- 预创建的实例列表
      uid: 实例的唯一ID
      style: 使用的样式名
    -->
	<Instances>
		<!-- 此实例和Assloud中的XTC_Hotspot2D关联-->
		<Instance uid="XTC_Hotspot2D" style="default"/>
	</Instances>
	<!-- 预加载 -->
	<Preload>
		<!-- 消息订阅的主题
          message: 消息
          Parameter.key: 参数的键
          Parameter.value: 参数的值
          Parameter.type: 参数的类型，支持的类型为string,int,float,bool
		-->
		<Subjects>
			<Subject message="/XTC/Hotspot2D/Open">
				<Parameters>
					<Parameter key="uid" value="XTC_Hotspot2D" type="string"/>
					<Parameter key="source" value="" type="string"/>
					<Parameter key="uri" value="" type="string"/>
					<Parameter key="delay" value="0" type="float"/>
				</Parameters>
			</Subject>
		</Subjects>
	</Preload>
</MyConfig>
